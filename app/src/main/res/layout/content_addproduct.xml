<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddProduct"
    android:background="@drawable/cake"
    tools:showIn="@layout/activity_addproduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtHProductId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter The Product ID"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtHProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Name"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spHCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtHProdcutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter price"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtHQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quantitty"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnHAddprodcut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d3b9bb"
            android:text="Add prodcut" />

        <TextView
            android:id="@+id/txtHpError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line 1\nLine 2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>