<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewProdcuts"
    tools:showIn="@layout/activity_prodcutsview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtVProdctId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Id"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSearchProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Products" />

        <EditText
            android:id="@+id/txtVProdctName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Name"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtVProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Category"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Price"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtVQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Available Quantity"
            android:gravity="center"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtVError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line 1\nLine 2"
            tools:text="Buy Products" />

        <EditText
            android:id="@+id/txtInvoiceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Invoice id"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtQutyNeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Quantity"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Total"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btbBuyProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d3b9bb"
            android:text=" Buy" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>